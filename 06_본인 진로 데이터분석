    <script>
        // Chart 1: 1인당 교육비 비교 (막대 그래프)
        const ctx1 = document.getElementById('costChart').getContext('2d');
        new Chart(ctx1, {
            type: 'bar',
            data: {
                labels: ['가천대(사립)', '강원대(국립)', '충남대(국립)', '경북대(국립)', '차의과학대(사립)', '포항공대(사립)'],
                datasets: [{
                    label: '1인당 교육비 (단위: 만 원)',
                    data: [1811, 2397, 2401, 2708, 4402, 12738],
                    backgroundColor: [
                        'rgba(147, 51, 234, 0.7)', // 사립 (보라)
                        'rgba(37, 99, 235, 0.7)',  // 국립 (파랑)
                        'rgba(37, 99, 235, 0.7)',
                        'rgba(37, 99, 235, 0.7)',
                        'rgba(147, 51, 234, 0.7)',
                        'rgba(147, 51, 234, 0.9)'  // 포항공대 (강조)
                    ],
                    borderColor: [
                        'rgba(147, 51, 234, 1)',
                        'rgba(37, 99, 235, 1)',
                        'rgba(37, 99, 235, 1)',
                        'rgba(37, 99, 235, 1)',
                        'rgba(147, 51, 234, 1)',
                        'rgba(147, 51, 234, 1)'
                    ],
                    borderWidth: 1,
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { borderDash: [2, 4], color: '#f1f5f9' }
                    },
                    x: { grid: { display: false } }
                },
                plugins: {
                    legend: { display: false }
                }
            }
        });

        // Chart 2: 컴퓨터공학과 비용 구조 (그룹 막대 그래프)
        const ctx2 = document.getElementById('deptChart').getContext('2d');
        new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: ['평균 등록금', '실질 부담금(등록금-장학금)'],
                datasets: [
                    {
                        label: '국립 (강원대)',
                        data: [436, 104],
                        backgroundColor: 'rgba(37, 99, 235, 0.8)',
                        borderRadius: 6
                    },
                    {
                        label: '사립 (가천대)',
                        data: [969, 645],
                        backgroundColor: 'rgba(147, 51, 234, 0.8)',
                        borderRadius: 6
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { borderDash: [2, 4], color: '#f1f5f9' }
                    },
                    x: { grid: { display: false } }
                },
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });
    </script>

